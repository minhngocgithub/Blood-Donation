@model Blood_Donation_Website.Models.DTOs.ContactMessageDto
@{
    ViewData["Title"] = "Liên hệ";
}

@section Styles {
    <link rel="stylesheet" href="~/css/contact-page.css" asp-append-version="true"/>
}

<section class="contact-section py-5">
    <div class="container contact-container">
        <h2 class="mb-4 text-danger fw-bold text-center">Liên hệ với chúng tôi</h2>
        <div class="row justify-content-center">
            <div class="col-md-7">
                <div class="contact-form-wrapper bg-white p-4 rounded shadow-sm">
                    <form asp-action="Index" method="post" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label">Họ và tên</label>
                            <input asp-for="FullName" class="form-control" required />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" required type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label">Số điện thoại</label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Subject" class="form-label">Chủ đề</label>
                            <input asp-for="Subject" class="form-control" required />
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Message" class="form-label">Nội dung</label>
                            <textarea asp-for="Message" class="form-control" rows="5" required></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-danger w-100">Gửi liên hệ</button>
                    </form>
                    <div class="mt-3">
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                        }
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-5 mt-4 mt-md-0">
                <div class="contact-info bg-light p-4 rounded shadow-sm h-100">
                    <h5 class="fw-bold mb-3 text-danger">Thông tin liên hệ</h5>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2"><i class="fas fa-map-marker-alt text-danger me-2"></i>26 Nguyễn Thái Học, Ba Đình, Hà Nội</li>
                        <li class="mb-2"><i class="fas fa-phone text-danger me-2"></i>1900-1234</li>
                        <li class="mb-2"><i class="fas fa-envelope text-danger me-2"></i>lienhe@hienmau.gov.vn</li>
                        <li><i class="fas fa-clock text-danger me-2"></i>24/7 - Luôn sẵn sàng hỗ trợ</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 