@model Blood_Donation_Website.Models.DTOs.NewsDto
@{
    ViewData["Title"] = Model.Title;
    var relatedNews = ViewBag.RelatedNews as List<Blood_Donation_Website.Models.DTOs.NewsDto>;
}

<style>
.news-read-page {
    background: #f8f9fa;
    min-height: 100vh;
    padding: 2rem 0;
}

.back-button {
    margin-bottom: 1.5rem;
}

.back-button a {
    color: #667eea;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s;
}

.back-button a:hover {
    color: #764ba2;
}

.back-button i {
    margin-right: 0.5rem;
}

.article-container {
    background: white;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    margin-bottom: 3rem;
}

.article-header-image {
    width: 100%;
    max-height: 500px;
    object-fit: cover;
}

.article-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    padding: 1.5rem 2rem;
    background: #f8f9fa;
    border-bottom: 1px solid #dee2e6;
}

.meta-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #6c757d;
    font-size: 0.95rem;
}

.meta-item i {
    color: #667eea;
}

.meta-item strong {
    color: #333;
}

.article-body {
    padding: 3rem 2rem;
}

.article-category {
    display: inline-block;
    padding: 0.5rem 1.25rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border-radius: 25px;
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
}

.article-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #333;
    margin-bottom: 1.5rem;
    line-height: 1.3;
}

.article-summary {
    font-size: 1.2rem;
    color: #6c757d;
    font-style: italic;
    padding: 1.5rem;
    background: #f8f9fa;
    border-left: 4px solid #667eea;
    margin-bottom: 2rem;
    border-radius: 5px;
}

.article-content {
    font-size: 1.1rem;
    line-height: 1.8;
    color: #333;
}

.article-content p {
    margin-bottom: 1.5rem;
}

.article-content img {
    max-width: 100%;
    height: auto;
    border-radius: 5px;
    margin: 1.5rem 0;
}

.article-content h2 {
    font-size: 1.8rem;
    font-weight: 700;
    margin: 2rem 0 1rem;
    color: #333;
}

.article-content h3 {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 1.5rem 0 1rem;
    color: #333;
}

.related-news-section {
    background: white;
    padding: 2rem;
    border-radius: 10px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.related-news-section h3 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: #333;
    padding-bottom: 1rem;
    border-bottom: 2px solid #667eea;
}

.related-news-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1.5rem;
}

.related-news-card {
    display: flex;
    flex-direction: column;
    background: #f8f9fa;
    border-radius: 8px;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s;
}

.related-news-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

.related-news-image {
    width: 100%;
    height: 150px;
    object-fit: cover;
}

.related-news-placeholder {
    width: 100%;
    height: 150px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
}

.related-news-placeholder i {
    font-size: 2rem;
    color: white;
    opacity: 0.5;
}

.related-news-body {
    padding: 1rem;
}

.related-news-title {
    font-size: 1rem;
    font-weight: 600;
    color: #333;
    margin-bottom: 0.5rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.related-news-date {
    font-size: 0.85rem;
    color: #6c757d;
}

.related-news-date i {
    color: #667eea;
    margin-right: 0.35rem;
}
</style>

<div class="news-read-page">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="back-button">
                    <a asp-action="List">
                        <i class="fas fa-arrow-left"></i>Quay lại danh sách tin tức
                    </a>
                </div>

                <div class="article-container">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.Title" class="article-header-image" 
                             onerror="this.style.display='none';" />
                    }

                    <div class="article-meta">
                        @if (!string.IsNullOrEmpty(Model.CategoryName))
                        {
                            <div class="meta-item">
                                <i class="fas fa-folder"></i>
                                <span>@Model.CategoryName</span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.AuthorName))
                        {
                            <div class="meta-item">
                                <i class="fas fa-user"></i>
                                <span>Tác giả: <strong>@Model.AuthorName</strong></span>
                            </div>
                        }
                        <div class="meta-item">
                            <i class="fas fa-calendar"></i>
                            <span>@(Model.PublishedDate?.ToString("dd/MM/yyyy HH:mm") ?? Model.CreatedDate.ToString("dd/MM/yyyy HH:mm"))</span>
                        </div>
                        <div class="meta-item">
                            <i class="fas fa-eye"></i>
                            <span>@Model.ViewCount lượt xem</span>
                        </div>
                    </div>

                    <div class="article-body">
                        <h1 class="article-title">@Model.Title</h1>

                        @if (!string.IsNullOrEmpty(Model.Summary))
                        {
                            <div class="article-summary">
                                @Model.Summary
                            </div>
                        }

                        <div class="article-content">
                            @Html.Raw(Model.Content)
                        </div>
                    </div>
                </div>

                @if (relatedNews != null && relatedNews.Any())
                {
                    <div class="related-news-section">
                        <h3><i class="fas fa-newspaper me-2"></i>Tin tức liên quan</h3>
                        <div class="related-news-grid">
                            @foreach (var news in relatedNews)
                            {
                                <a href="@Url.Action("Read", new { id = news.NewsId })" class="related-news-card">
                                    @if (!string.IsNullOrEmpty(news.ImageUrl))
                                    {
                                        <img src="@news.ImageUrl" alt="@news.Title" class="related-news-image" />
                                    }
                                    else
                                    {
                                        <div class="related-news-placeholder">
                                            <i class="fas fa-newspaper"></i>
                                        </div>
                                    }

                                    <div class="related-news-body">
                                        <h4 class="related-news-title">@news.Title</h4>
                                        <div class="related-news-date">
                                            <i class="fas fa-calendar"></i>
                                            @(news.PublishedDate?.ToString("dd/MM/yyyy") ?? news.CreatedDate.ToString("dd/MM/yyyy"))
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
