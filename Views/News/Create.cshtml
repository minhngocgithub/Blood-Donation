@model Blood_Donation_Website.Models.DTOs.NewsCreateDto
@{
    ViewData["Title"] = "Tạo tin tức mới";
}

<style>
.news-form-page {
    background: #f8f9fa;
    min-height: 100vh;
    padding: 2rem 0;
}

.form-card {
    background: white;
    border-radius: 10px;
    padding: 2rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.form-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 1.5rem;
    border-radius: 10px 10px 0 0;
    margin: -2rem -2rem 2rem -2rem;
}

.form-header h3 {
    margin: 0;
    font-weight: 700;
}

.form-label {
    font-weight: 600;
    color: #333;
    margin-bottom: 0.5rem;
}

.form-control:focus, .form-select:focus {
    border-color: #667eea;
    box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
}

.btn-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border: none;
    padding: 0.75rem 2rem;
    font-weight: 600;
}

.btn-primary:hover {
    opacity: 0.9;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.2);
}

.preview-image {
    max-width: 300px;
    border-radius: 5px;
    margin-top: 1rem;
}
</style>

<div class="news-form-page">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="form-card">
                    <div class="form-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3>
                                <i class="fas fa-plus-circle me-2"></i>Tạo tin tức mới
                            </h3>
                            <a asp-action="Index" class="btn btn-light">
                                <i class="fas fa-arrow-left me-2"></i>Quay lại
                            </a>
                        </div>
                    </div>

                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        
                        @if (!string.IsNullOrEmpty(TempData["ErrorMessage"]?.ToString()))
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }
                        
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Tiêu đề <span class="text-danger">*</span></label>
                            <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề tin tức..." />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label">Danh mục</label>
                            <select asp-for="CategoryId" class="form-select">
                                <option value="">-- Chọn danh mục --</option>
                                @if (ViewBag.Categories != null)
                                {
                                    var categories = ViewBag.Categories as IEnumerable<Blood_Donation_Website.Models.DTOs.NewsCategoryDto>;
                                    if (categories != null && categories.Any())
                                    {
                                        foreach (var cat in categories)
                                        {
                                            <option value="@cat.CategoryId">@cat.CategoryName</option>
                                        }
                                    }
                                    else
                                    {
                                        <option disabled>Chưa có danh mục nào</option>
                                    }
                                }
                            </select>
                            @{
                                var cats = ViewBag.Categories as IEnumerable<Blood_Donation_Website.Models.DTOs.NewsCategoryDto>;
                            }
                            @if (cats == null || !cats.Any())
                            {
                                <small class="text-warning">
                                    <i class="fas fa-exclamation-triangle me-1"></i>
                                    Chưa có danh mục nào. Vui lòng <a asp-controller="NewsCategory" asp-action="Seed" class="text-warning fw-bold">khởi tạo danh mục</a> trước.
                                </small>
                            }
                        </div>

                        <div class="mb-3">
                            <label asp-for="Summary" class="form-label">Tóm tắt</label>
                            <textarea asp-for="Summary" class="form-control" rows="3" 
                                      placeholder="Nhập tóm tắt ngắn gọn về tin tức..."></textarea>
                            <span asp-validation-for="Summary" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Content" class="form-label">Nội dung <span class="text-danger">*</span></label>
                            <textarea asp-for="Content" class="form-control" rows="15" 
                                      placeholder="Nhập nội dung chi tiết tin tức..."></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                            <small class="text-muted">Hỗ trợ HTML. Bạn có thể sử dụng các thẻ HTML để định dạng nội dung.</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label">URL hình ảnh</label>
                            <input asp-for="ImageUrl" class="form-control" 
                                   id="imageUrlInput"
                                   placeholder="/image/news.jpg" 
                                   onchange="previewImage(this.value)" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            
                            <div class="mt-2">
                                <small class="text-muted d-block mb-2">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Nhập đường dẫn: <code>/image/tên-file.jpg</code> hoặc chọn ảnh có sẵn:
                                </small>
                                <div class="row g-2">
                                    <div class="col-auto">
                                        <button type="button" class="btn btn-sm btn-outline-primary" onclick="selectProjectImage('/image/image1.jpeg')">
                                            <i class="fas fa-image me-1"></i>Ảnh 1
                                        </button>
                                    </div>
                                    <div class="col-auto">
                                        <button type="button" class="btn btn-sm btn-outline-primary" onclick="selectProjectImage('/image/image2.jpeg')">
                                            <i class="fas fa-image me-1"></i>Ảnh 2
                                        </button>
                                    </div>
                                    <div class="col-auto">
                                        <button type="button" class="btn btn-sm btn-outline-primary" onclick="selectProjectImage('/image/image3.jpeg')">
                                            <i class="fas fa-image me-1"></i>Ảnh 3
                                        </button>
                                    </div>
                                    <div class="col-auto">
                                        <button type="button" class="btn btn-sm btn-outline-primary" onclick="selectProjectImage('/image/Van-dong-hien-mau-tinh-nguyen.png')">
                                            <i class="fas fa-heart me-1"></i>Vận động hiến máu
                                        </button>
                                    </div>
                                    <div class="col-auto">
                                        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="selectSampleImage('https://images.unsplash.com/photo-1615461066159-fea0960485d5?w=800')">
                                            <i class="fas fa-globe me-1"></i>Online 1
                                        </button>
                                    </div>
                                    <div class="col-auto">
                                        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="selectSampleImage('https://images.unsplash.com/photo-1582719508461-905c673771fd?w=800')">
                                            <i class="fas fa-globe me-1"></i>Online 2
                                        </button>
                                    </div>
                                </div>
                            </div>
                            
                            <img id="imagePreview" class="preview-image d-none mt-3" alt="Preview" />
                        </div>

                        <div class="mb-4">
                            <div class="form-check">
                                <input asp-for="IsPublished" class="form-check-input" type="checkbox" />
                                <label asp-for="IsPublished" class="form-check-label">
                                    Xuất bản ngay
                                </label>
                            </div>
                            <small class="text-muted">Nếu không chọn, tin tức sẽ được lưu ở trạng thái nháp</small>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Lưu tin tức
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/sweetalert-helper.js"></script>
    <script>
        function previewImage(url) {
            var preview = document.getElementById('imagePreview');
            if (url) {
                // Nếu là đường dẫn tương đối, thêm base URL
                var fullUrl = url;
                if (url.startsWith('/')) {
                    fullUrl = window.location.origin + url;
                }
                
                preview.src = fullUrl;
                preview.classList.remove('d-none');
                preview.onerror = function() {
                    this.classList.add('d-none');
                    alert('Không thể tải ảnh. Vui lòng kiểm tra đường dẫn.');
                };
            } else {
                preview.classList.add('d-none');
            }
        }

        function selectProjectImage(path) {
            var input = document.getElementById('imageUrlInput');
            input.value = path;
            previewImage(path);
        }

        function selectSampleImage(url) {
            var input = document.getElementById('imageUrlInput');
            input.value = url;
            previewImage(url);
        }

        $(document).ready(function() {
            var errorMsg = '@TempData["ErrorMessage"]';
            if (errorMsg) {
                showError(errorMsg);
            }
        });
    </script>
}
