@{
    ViewData["Title"] = "Trang chủ";
}

<div class="index-page">
<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-background">
        <div class="container">
            <div class="row align-items-center min-vh-100">
                <div class="col-lg-6">
                    <div class="hero-content">
                        <h1 class="hero-title">
                            Hiến máu cứu người
                            <span class="text-primary">Chia sẻ yêu thương</span>
                        </h1>
                        <p class="hero-description">
                            Mỗi giọt máu bạn hiến tặng có thể cứu sống đến 3 người.
                            Hãy cùng chúng tôi lan tỏa tình yêu thương và cứu sống những sinh mạng quý giá.
                        </p>
                        @* Hero Actions *@
                        <div class="hero-actions">
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <a href="/events" class="btn btn-primary btn-lg me-3">
                                    <i class="fas fa-calendar-plus me-2"></i>
                                    Đăng ký hiến máu
                                </a>
                            }
                            else
                            {
                                <button type="button" class="btn btn-primary btn-lg me-3" id="btnRegisterEvent">
                                    <i class="fas fa-calendar-plus me-2"></i>
                                    Đăng ký hiến máu
                                </button>
                                <script>
                                    document.addEventListener('DOMContentLoaded', function () {
                                        var btn = document.getElementById('btnRegisterEvent');
                                        if (btn) {
                                            btn.addEventListener('click', function () {
                                                showWarning('Bạn cần đăng nhập', 'Vui lòng đăng nhập để đăng ký hiến máu!');
                                            });
                                        }
                                    });
                                </script>
                            }
                            <a href="/Home/About" class="btn btn-outline-primary btn-lg">
                                <i class="fas fa-info-circle me-2"></i>
                                Tìm hiểu thêm
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="hero-image">
                        <img src="./image/Van-dong-hien-mau-tinh-nguyen.png" alt="Blood Donation"
                            class="img-fluid rounded-3 shadow-lg">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="stats-section py-5">
    <div class="container">
        <div class="row mb-5">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="section-title">Tại sao nên hiến máu?</h2>
                <p class="section-description">
                    Hiến máu không chỉ giúp cứu sống người khác mà còn mang lại nhiều lợi ích cho chính bạn
                </p>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stat-card text-center">
                    <div class="stat-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <h3 class="stat-number">15,000+</h3>
                    <p class="stat-label">Người hiến máu</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stat-card text-center">
                    <div class="stat-icon">
                        <i class="fas fa-tint"></i>
                    </div>
                    <h3 class="stat-number">45,000+</h3>
                    <p class="stat-label">Đơn vị máu</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stat-card text-center">
                    <div class="stat-icon">
                        <i class="fas fa-heart"></i>
                    </div>
                    <h3 class="stat-number">135,000+</h3>
                    <p class="stat-label">Sinh mạng cứu sống</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stat-card text-center">
                    <div class="stat-icon">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <h3 class="stat-number">500+</h3>
                    <p class="stat-label">Sự kiện tổ chức</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section py-5 bg-light">
    <div class="container">
        <div class="row mb-5">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="section-title">Tại sao nên hiến máu?</h2>
                <p class="section-description">
                    Hiến máu không chỉ giúp cứu sống người khác mà còn mang lại nhiều lợi ích cho chính bạn
                </p>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-heartbeat"></i>
                    </div>
                    <h4 class="feature-title">Tốt cho sức khỏe</h4>
                    <p class="feature-description">
                        Hiến máu giúp kích thích sản xuất tế bào máu mới, giảm nguy cơ mắc bệnh tim mạch và ung thư.
                    </p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h4 class="feature-title">Kiểm tra sức khỏe miễn phí</h4>
                    <p class="feature-description">
                        Được kiểm tra sức khỏe tổng quát và xét nghiệm máu miễn phí trước khi hiến máu.
                    </p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-hands-helping"></i>
                    </div>
                    <h4 class="feature-title">Cứu sống sinh mạng</h4>
                    <p class="feature-description">
                        Mỗi lần hiến máu có thể cứu sống đến 3 người, mang lại ý nghĩa to lớn cho cộng đồng.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Upcoming Events Section -->
<section class="events-section py-5">
    <div class="container">
        <div class="row mb-5">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="section-title">Sự kiện sắp tới</h2>
                <p class="section-description">
                    Tham gia các sự kiện hiến máu gần bạn nhất
                </p>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="event-card">
                    <div class="event-image">
                        <img src="/placeholder.svg?height=200&width=350" alt="Event" class="img-fluid">
                        <div class="event-date">
                            <span class="day">15</span>
                            <span class="month">Th12</span>
                        </div>
                    </div>
                    <div class="event-content">
                        <h5 class="event-title">Ngày hội hiến máu tại ĐH Bách Khoa</h5>
                        <div class="event-meta">
                            <span class="event-location">
                                <i class="fas fa-map-marker-alt me-1"></i>
                                ĐH Bách Khoa TP.HCM
                            </span>
                            <span class="event-time">
                                <i class="fas fa-clock me-1"></i>
                                8:00 - 17:00
                            </span>
                        </div>
                        <p class="event-description">
                            Sự kiện hiến máu lớn nhất trong năm tại trường Đại học Bách Khoa TP.HCM.
                        </p>
                        <a href="/events/details/1" class="btn btn-primary">Đăng ký ngay</a>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 mb-4">
                <div class="event-card">
                    <div class="event-image">
                        <img src="/placeholder.svg?height=200&width=350" alt="Event" class="img-fluid">
                        <div class="event-date">
                            <span class="day">20</span>
                            <span class="month">Th12</span>
                        </div>
                    </div>
                    <div class="event-content">
                        <h5 class="event-title">Hiến máu cộng đồng Quận 1</h5>
                        <div class="event-meta">
                            <span class="event-location">
                                <i class="fas fa-map-marker-alt me-1"></i>
                                Công viên 23/9
                            </span>
                            <span class="event-time">
                                <i class="fas fa-clock me-1"></i>
                                7:00 - 16:00
                            </span>
                        </div>
                        <p class="event-description">
                            Chương trình hiến máu nhân đạo tại công viên 23/9, Quận 1.
                        </p>
                        <a href="/events/details/2" class="btn btn-primary">Đăng ký ngay</a>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 mb-4">
                <div class="event-card">
                    <div class="event-image">
                        <img src="/placeholder.svg?height=200&width=350" alt="Event" class="img-fluid">
                        <div class="event-date">
                            <span class="day">25</span>
                            <span class="month">Th12</span>
                        </div>
                    </div>
                    <div class="event-content">
                        <h5 class="event-title">Hiến máu tại Bệnh viện Chợ Rẫy</h5>
                        <div class="event-meta">
                            <span class="event-location">
                                <i class="fas fa-map-marker-alt me-1"></i>
                                BV Chợ Rẫy
                            </span>
                            <span class="event-time">
                                <i class="fas fa-clock me-1"></i>
                                6:00 - 18:00
                            </span>
                        </div>
                        <p class="event-description">
                            Chương trình hiến máu thường xuyên tại Bệnh viện Chợ Rẫy.
                        </p>
                        <a href="/events/details/3" class="btn btn-primary">Đăng ký ngay</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <a href="/events" class="btn btn-outline-primary btn-lg">
                Xem tất cả sự kiện
                <i class="fas fa-arrow-right ms-2"></i>
            </a>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section py-5 bg-primary text-white">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h3 class="cta-title mb-3">Sẵn sàng trở thành người hùng?</h3>
                <p class="cta-description mb-0">
                    Đăng ký ngay hôm nay để tham gia vào cộng đồng những người hiến máu tình nguyện và cứu sống những
                    sinh mạng quý giá.
                </p>
            </div>
            <div class="col-lg-4 text-lg-end">
                <button type="button" class="btn btn-light btn-lg" id="btnScrollToTop">
                    <i class="fas fa-user-plus me-2"></i>
                    Đăng ký ngay
                </button>
            </div>
        </div>
    </div>
</section>
