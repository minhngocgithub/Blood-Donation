@{
    ViewData["Title"] = "Dashboard quản trị";
    var totalUsers = ViewBag.TotalUsers ?? 0;
    var totalAdmins = ViewBag.TotalAdmins ?? 0;
    var totalDoctors = ViewBag.TotalDoctors ?? 0;
    var totalStaff = ViewBag.TotalStaff ?? 0;
    var totalHospitals = ViewBag.TotalHospitals ?? 0;
}
<div class="container py-5">
    <h2 class="text-center mb-4">Dashboard quản trị hệ thống</h2>
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card border-primary shadow-sm">
                <div class="card-body text-center">
                    <h6 class="card-title text-primary">Tổng người dùng</h6>
                    <p class="display-6 fw-bold">@totalUsers</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-success shadow-sm">
                <div class="card-body text-center">
                    <h6 class="card-title text-success">Admin</h6>
                    <p class="display-6 fw-bold">@totalAdmins</p>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card border-info shadow-sm">
                <div class="card-body text-center">
                    <h6 class="card-title text-info">Bác sĩ</h6>
                    <p class="display-6 fw-bold">@totalDoctors</p>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card border-warning shadow-sm">
                <div class="card-body text-center">
                    <h6 class="card-title text-warning">Nhân viên</h6>
                    <p class="display-6 fw-bold">@totalStaff</p>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card border-danger shadow-sm">
                <div class="card-body text-center">
                    <h6 class="card-title text-danger">Bệnh viện</h6>
                    <p class="display-6 fw-bold">@totalHospitals</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-6 text-center">
            <a asp-action="Users" class="btn btn-outline-primary btn-lg"><i class="fas fa-users me-2"></i>Quản lý người dùng</a>
        </div>
    </div>
</div> 