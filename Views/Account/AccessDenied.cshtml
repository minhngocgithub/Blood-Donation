@{
    ViewData["Title"] = "Truy cập bị từ chối";
}
<div class="container text-center mt-5">
    <h1 class="display-4 text-danger">Truy cập bị từ chối</h1>
    <p class="lead">Bạn không có quyền truy cập vào trang này.</p>
    @if (ViewData["ReturnUrl"] != null)
    {
        <a href="@ViewData["ReturnUrl"]" class="btn btn-primary mt-3">Quay lại</a>
    }
    else
    {
        <a href="~/" class="btn btn-primary mt-3">Về trang chủ</a>
    }
</div>