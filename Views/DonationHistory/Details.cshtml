@model Blood_Donation_Website.Models.DTOs.DonationHistoryDto
@{
    ViewData["Title"] = "Chi tiết hiến máu";
}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-tint me-2"></i>Chi tiết hiến máu
                    </h4>
                    <a href="@Url.Action("MyHistory", "DonationHistory")" class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-left me-1"></i>Quay lại
                    </a>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted">Sự kiện</label>
                            <div class="h6 mb-0">@Model.EventName</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted">Ngày hiến máu</label>
                            <div class="h6 mb-0">
                                <i class="fas fa-calendar-alt me-1 text-info"></i>@Model.DonationDate.ToString("dd/MM/yyyy")
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted">Địa điểm</label>
                            <div class="h6 mb-0">
                                <i class="fas fa-map-marker-alt me-1 text-danger"></i>@Model.EventDate?.ToString("dd/MM/yyyy")
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted">Nhóm máu</label>
                            <div class="h6 mb-0">
                                <i class="fas fa-tint me-1 text-danger"></i>@Model.BloodTypeName
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted">Thể tích</label>
                            <div class="h6 mb-0">
                                <i class="fas fa-flask me-1 text-primary"></i>@Model.Volume ml
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted">Trạng thái</label>
                            <div>
                                <span class="badge @GetStatusBadgeClass(Model.Status) fs-6">@GetStatusText(Model.Status)</span>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted">Chứng nhận</label>
                            <div>
                                @if (Model.CertificateIssued)
                                {
                                    <span class="badge bg-success fs-6">Đã cấp</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary fs-6">Chưa cấp</span>
                                }
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted">Ngày đủ điều kiện tiếp theo</label>
                            <div class="h6 mb-0">
                                @if (Model.NextEligibleDate.HasValue)
                                {
                                    <i class="fas fa-calendar-check me-1 text-success"></i>@Model.NextEligibleDate.Value.ToString("dd/MM/yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">Không xác định</span>
                                }
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Notes))
                        {
                            <div class="col-12 mb-3">
                                <label class="form-label text-muted">Ghi chú</label>
                                <div class="alert alert-info mb-0">
                                    <i class="fas fa-sticky-note me-1"></i>@Model.Notes
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@functions {
    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Completed" => "bg-success text-white",
            "Cancelled" => "bg-danger text-white",
            _ => "bg-secondary text-white"
        };
    }
    private string GetStatusText(string status)
    {
        return status switch
        {
            "Completed" => "Hoàn thành",
            "Cancelled" => "Đã hủy",
            _ => status
        };
    }
} 