@{
    ViewData["Title"] = "Trang chủ";
}

<div class="container-fluid px-0 main-home-wrapper" style="padding-top:70px;">
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-background">
            <div class="container">
                <div class="row align-items-center min-vh-100">
                    <div class="col-lg-6">
                        <div class="hero-content">
                            <h1 class="hero-title">
                                Hiến máu cứu người
                                <span class="text-primary">Chia sẻ yêu thương</span>
                            </h1>
                            <p class="hero-description">
                                Mỗi giọt máu bạn hiến tặng có thể cứu sống đến 3 người.
                                Hãy cùng chúng tôi lan tỏa tình yêu thương và cứu sống những sinh mạng quý giá.
                            </p>
                            <div class="hero-actions">
                                <a asp-controller="BloodDonationEvent" asp-action="Index" class="btn btn-primary btn-lg me-3">
                                    <i class="fas fa-calendar-plus me-2"></i>
                                    Đăng ký hiến máu
                                </a>
                                <a asp-controller="Home" asp-action="About" class="btn btn-outline-primary btn-lg">
                                    <i class="fas fa-info-circle me-2"></i>
                                    Tìm hiểu thêm
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="hero-image">
                            <img src="~/image/Van-dong-hien-mau-tinh-nguyen.png" alt="Blood Donation" class="img-fluid rounded-3 shadow-lg">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="stats-section py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="stat-card text-center">
                        <div class="stat-icon">
                            <i class="fas fa-users"></i>
                        </div>
                        <h3 class="stat-number">15,000+</h3>
                        <p class="stat-label">Người hiến máu</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="stat-card text-center">
                        <div class="stat-icon">
                            <i class="fas fa-tint"></i>
                        </div>
                        <h3 class="stat-number">45,000+</h3>
                        <p class="stat-label">Đơn vị máu</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="stat-card text-center">
                        <div class="stat-icon">
                            <i class="fas fa-heart"></i>
                        </div>
                        <h3 class="stat-number">135,000+</h3>
                        <p class="stat-label">Sinh mạng cứu sống</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="stat-card text-center">
                        <div class="stat-icon">
                            <i class="fas fa-calendar-check"></i>
                        </div>
                        <h3 class="stat-number">500+</h3>
                        <p class="stat-label">Sự kiện tổ chức</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="features-section py-5 bg-light">
        <div class="container">
            <div class="row mb-5">
                <div class="col-lg-8 mx-auto text-center">
                    <h2 class="section-title">Tại sao nên hiến máu?</h2>
                    <p class="section-description">
                        Hiến máu không chỉ giúp cứu sống người khác mà còn mang lại nhiều lợi ích cho chính bạn
                    </p>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-heartbeat"></i>
                        </div>
                        <h4 class="feature-title">Tốt cho sức khỏe</h4>
                        <p class="feature-description">
                            Hiến máu giúp kích thích sản xuất tế bào máu mới, giảm nguy cơ mắc bệnh tim mạch và ung thư.
                        </p>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                        <h4 class="feature-title">Kiểm tra sức khỏe miễn phí</h4>
                        <p class="feature-description">
                            Được kiểm tra sức khỏe tổng quát và xét nghiệm máu miễn phí trước khi hiến máu.
                        </p>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-hands-helping"></i>
                        </div>
                        <h4 class="feature-title">Cứu sống sinh mạng</h4>
                        <p class="feature-description">
                            Mỗi lần hiến máu có thể cứu sống đến 3 người, mang lại ý nghĩa to lớn cho cộng đồng.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Upcoming Events Section -->
    <section class="events-section py-5">
        <div class="container">
            <div class="row mb-5">
                <div class="col-lg-8 mx-auto text-center">
                    <h2 class="section-title">Sự kiện sắp tới</h2>
                    <p class="section-description">
                        Tham gia các sự kiện hiến máu gần bạn nhất
                    </p>
                </div>
            </div>

            <div class="row" id="top3-events-container">
                <!-- Sự kiện sẽ được render ở đây bằng JavaScript -->
            </div>

            <div class="text-center mt-4">
                <a asp-controller="BloodDonationEvent" asp-action="Index" class="btn btn-outline-primary btn-lg">
                    Xem tất cả sự kiện
                    <i class="fas fa-arrow-right ms-2"></i>
                </a>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section py-5 bg-primary text-white">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h3 class="cta-title mb-3">Sẵn sàng trở thành người hùng?</h3>
                    <p class="cta-description mb-0">
                        Đăng ký ngay hôm nay để tham gia vào cộng đồng những người hiến máu tình nguyện và cứu sống những sinh mạng quý giá.
                    </p>
                </div>
                <div class="col-lg-4 text-lg-end">
                    <a href="/account/register" class="btn btn-light btn-lg">
                        <i class="fas fa-user-plus me-2"></i>
                        Đăng ký ngay
                    </a>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    @await Html.PartialAsync("_NotificationScripts")
    <script>
    $(document).ready(function () {
        $.get('/BloodDonationEvent/GetTop3', function (events) {
            let html = '';
            events.forEach(function (event) {
                html += `
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="event-card">
                        <div class="event-image">
                            <img src="/placeholder.svg?height=200&width=350" alt="Event" class="img-fluid">
                            <div class="event-date">
                                <span class="day">${new Date(event.startDate).getDate()}</span>
                                <span class="month">Th${new Date(event.startDate).getMonth() + 1}</span>
                            </div>
                        </div>
                        <div class="event-content">
                            <h5 class="event-title">${event.title}</h5>
                            <div class="event-meta">
                                <span class="event-location">
                                    <i class="fas fa-map-marker-alt me-1"></i>
                                    ${event.locationName}
                                </span>
                                <span class="event-time">
                                    <i class="fas fa-clock me-1"></i>
                                    ${new Date(event.startDate).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' })} - ${new Date(event.endDate).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' })}
                                </span>
                            </div>
                            <p class="event-description">
                                ${event.description}
                            </p>
                            <a href="/BloodDonationEvent/Details/${event.id}" class="btn btn-primary">Đăng ký ngay</a>
                        </div>
                    </div>
                </div>
                `;
            });
            $('#top3-events-container').html(html);
        });
    });
</script>
}
