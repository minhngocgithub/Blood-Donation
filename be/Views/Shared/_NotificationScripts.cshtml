@* /Views/Shared/_NotificationScripts.cshtml *@
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
@if (TempData["SuccessMessage"] != null)
{
    <text>
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Thành công!',
        });
    </script>
    </text>
}
@if (TempData["ErrorMessage"] != null)
{
    <text>
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Thất bại!',
        });
    </script>
    </text>
} 